<%= turbo_frame_tag 'urls' do %>
	<div class="relative flex flex-col w-full h-full overflow-scroll text-gray-700 bg-white shadow-md rounded-xl bg-clip-border">
		<table class="w-full text-left table-auto min-w-max">
			<thead>
				<tr>
					<th class="p-4 border-b border-blue-gray-100 bg-purple-100">
			 			<p class="block font-sans text-sm antialiased font-bold leading-none text-blue-gray-900 opacity-70">
							Short URL-el-le
						</p>
					</th>
					<th class="p-4 border-b border-blue-gray-100 bg-purple-100">
						<p class="block font-sans text-sm antialiased font-bold leading-none text-blue-gray-900 opacity-70">
							Original URL
						</p>
					</th>
					<th class="p-4 border-b border-blue-gray-100 bg-purple-100">
						<p class="block font-sans text-sm antialiased font-bold leading-none text-blue-gray-900 opacity-70">
							Expires on
						</p>
			 		</th>
				</tr>
			</thead>
			<tbody>
				<% @urls.each do |url| %>
					<%= render 'urls/url', url: url %>
				<% end %>
			</tbody>
		</table>
	</div>
<% end %>
